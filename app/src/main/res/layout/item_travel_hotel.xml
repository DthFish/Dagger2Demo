<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#333333"
        android:textSize="18sp"
        android:text="溧阳天目湖南山竹海渝水温泉度假酒店"/>

    <TextView
        android:id="@+id/tv_hotel_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_hotel"
        android:layout_below="@+id/tv_hotel"
        android:layout_marginTop="8dp"
        android:textColor="#999999"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/address"
        android:drawablePadding="5dp"
        android:text="酒店地址：长白山国际度假区白云路"/>

    <TextView
        android:id="@+id/tv_hotel_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_hotel"
        android:layout_below="@+id/tv_hotel_address"
        android:layout_marginTop="8dp"
        android:textColor="#999999"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/phone"
        android:drawablePadding="5dp"
        android:text="酒店电话：028-67826666"/>

    <TextView
        android:id="@+id/tv_time_in_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_hotel"
        android:layout_below="@+id/tv_hotel_phone"
        android:layout_marginTop="8dp"
        android:textColor="#999999"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/time"
        android:drawablePadding="5dp"
        android:layout_marginBottom="10dp"
        android:text="入店及离店时间：2016-08-05至2016-08-06"/>

    <View
        android:layout_alignParentBottom="true"
        android:background="#cccccc"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

</RelativeLayout>